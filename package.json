{
  "name": "happy-rolling-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build-ts": "tsc -P dev.tsconfig.json",
    "build": "yarn build-ts",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "serve": "node dist/src/index.js",
    "start": "yarn serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Type,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "yarn test -- --watchAll",
    "watch-ts": "tsc -P dev.tsconfig.json -w",
    "watch": "yarn build && concurrently -k -p \"[{name}]\" -n \"TS,NJ\" -c \"cyan.bold,green.bold\"  \"yarn watch-ts\" \"yarn watch-node\""
  },
  "dependencies": {
    "@discordjs/rest": "^0.3.0",
    "discord-api-types": "^0.27.0",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "inversify": "^6.0.1",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13"
  },
  "_moduleAliases": {
    "src": "./dist/src"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/module-alias": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  }
}
